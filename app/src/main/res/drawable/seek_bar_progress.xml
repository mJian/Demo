<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 背景效果 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <!-- angle 是角度 -->
            <gradient
                android:angle="270"
                android:centerColor="@android:color/holo_red_light"
                android:centerY="0.75"
                android:endColor="@android:color/holo_red_light"
                android:startColor="@android:color/holo_red_light" />
        </shape>
    </item>

    <!-- 第二进度条 -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#545454"
                    android:centerY="0.75"
                    android:endColor="#545454"
                    android:startColor="#545454" />
            </shape>
        </clip>
    </item>

    <!-- 第一进度条 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@android:color/holo_green_light"
                    android:centerY="0.75"
                    android:endColor="@android:color/holo_green_light"
                    android:startColor="@android:color/holo_green_light" />
            </shape>
        </clip>
    </item>




</layer-list>